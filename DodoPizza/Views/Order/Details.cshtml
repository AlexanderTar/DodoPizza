@using DodoPizza.Models
@using DodoPizza.ViewModels
@model DodoPizza.ViewModels.OrderView

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        @if (Model.DeliveryDate != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.DeliveryDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DeliveryDate)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpdateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdateTime)
        </dd>

    </dl>
    
    @Html.PassToRestaurantLink(Model)

    @Html.CourierForm(Model)

    @Html.DeliveredLink(Model)

    <h4>Products</h4>
    @Html.CreateProductLink(Model)
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products.First().Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.First().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.First().UpdateTime)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateTime)
                </td>
                <td>
                    @Html.ProductActionLink(item)
                </td>
            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
